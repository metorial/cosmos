FROM golang:1.25-bookworm AS builder

WORKDIR /build

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    make \
    protobuf-compiler \
    gcc \
    libc6-dev \
    && rm -rf /var/lib/apt/lists/*

ENV GOTOOLCHAIN=auto

COPY go.mod go.sum ./
RUN go mod download
RUN go install google.golang.org/protobuf/cmd/protoc-gen-go@latest
RUN go install google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest

COPY . .

RUN make proto
RUN CGO_ENABLED=1 GOOS=linux go build -o cosmos-agent ./cmd/cosmos-agent

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    bash \
    util-linux \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /build/cosmos-agent .

RUN mkdir -p /var/lib/cosmos/agent

EXPOSE 9092

CMD ["./cosmos-agent"]
