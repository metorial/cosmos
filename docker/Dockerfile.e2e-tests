FROM golang:1.25-bookworm

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    make \
    curl \
    && rm -rf /var/lib/apt/lists/*

ENV GOTOOLCHAIN=auto

COPY go.mod go.sum ./
RUN go mod download

# Copy internal packages needed by tests
COPY internal/ ./internal/

# Copy test files (even though .dockerignore excludes them)
COPY test/ ./test/

CMD ["go", "test", "-v", "./test/e2e/...", "-timeout", "10m"]
