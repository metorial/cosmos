# Cosmos AWS Infrastructure Configuration Example
# Copy this file to terraform.tfvars and customize for your deployment

# Required Variables
cluster_name = "my-cosmos-cluster"
aws_region   = "us-east-1"
environment  = "prod"

# Network Configuration
# vpc_cidr            = "10.0.0.0/16"
# availability_zones  = ["us-east-1a", "us-east-1b", "us-east-1c"]
# public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
# private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24", "10.0.12.0/24"]

# SSH Access
# Restrict SSH access to bastion to specific IPs (recommended)
allowed_cidr_blocks = ["0.0.0.0/0"]  # Change to your IP: ["YOUR_IP/32"]

# SSH Key Configuration
# Option 1: Use existing SSH key name in AWS
# ssh_key_name = "my-existing-key"

# Option 2: Upload new public key
# ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC..."

# Consul Configuration
consul_server_count  = 3
consul_instance_type = "t3.small"

# Vault Configuration
vault_server_count  = 3
vault_instance_type = "t3.small"

# Nomad Server Configuration
nomad_server_count         = 3
nomad_server_instance_type = "t3.small"

# Nomad Client Configuration
nomad_client_count         = 3
nomad_client_instance_type = "t3.medium"

# Nomad Management Client Configuration
nomad_management_client_count         = 2
nomad_management_client_instance_type = "t3.medium"

# Bastion Configuration
bastion_instance_type = "t3.small"

# GitHub Scripts Configuration
# Only change this if you forked the repository or use a different branch
# github_scripts_base_url = "https://raw.githubusercontent.com/metorial/cosmos/main/infra/scripts"
